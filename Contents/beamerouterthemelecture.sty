\defbeamertemplate*{footline}{lecture theme}
{
  \leavevmode%
  \hbox{%
    \iffalse
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1.5ex,right]{section in head/foot}%
    \usebeamerfont{section in head/foot}\insertsectionhead\hspace*{2ex}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1.5ex,left]{subsection in head/foot}%
    \usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1.5ex,right]{date in head/foot}%
    \insertframenumber{} / \inserttotalframenumber\hspace*{2ex} 
    \hyperlinksubsectionstart{\beamer@linkspace{0pt}}%
    \hyperlinksubsectionstartnext{\beamer@linkspace{0pt}}%
    \hspace*{2ex}%
    \insertlogo
  \end{beamercolorbox}%
  \fi
}%
  \vskip0pt%
}

\defbeamertemplate*{headline}{lecture theme}
{
